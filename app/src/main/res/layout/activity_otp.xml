<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volttic_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="OTP Verification"
        android:textColor="@color/textGray"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="+91 8171885080"
        android:textColor="@color/textGray"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/textGray"
        android:text="Enter the OTP you received to"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_button"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/otp1"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_pin_otp"
        android:padding="25dp"
        android:textColor="@color/textGray"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:text="8" />

    <EditText
        android:id="@+id/otp2"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_pin_otp"
        android:padding="25dp"
        android:textColor="@color/textGray"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/otp1"
        app:layout_constraintStart_toEndOf="@+id/otp1"
        app:layout_constraintTop_toTopOf="@+id/otp1"
        tools:text="8" />

    <EditText
        android:id="@+id/otp3"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_pin_otp"
        android:padding="25dp"
        android:textColor="@color/textGray"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/otp2"
        app:layout_constraintStart_toEndOf="@+id/otp2"
        app:layout_constraintTop_toTopOf="@+id/otp2"
        tools:text="8" />

    <EditText
        android:id="@+id/otp4"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_pin_otp"
        android:padding="25dp"
        android:textColor="@color/textGray"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/otp3"
        app:layout_constraintStart_toEndOf="@+id/otp3"
        app:layout_constraintTop_toTopOf="@+id/otp3"
        tools:text="8" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/ic_polygon_1"
        android:drawablePadding="8dp"
        android:text="RESEND OTP"
        android:textColor="@color/primary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/otp4"
        app:layout_constraintTop_toBottomOf="@+id/otp4" />


</androidx.constraintlayout.widget.ConstraintLayout>